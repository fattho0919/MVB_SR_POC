<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Image Display Area -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleType="fitCenter"
        android:background="@android:color/black"
        android:contentDescription="@string/image_display" />

    <!-- Image Info Text -->
    <TextView
        android:id="@+id/tvImageInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/image_info_placeholder"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textColor="@android:color/black" />

    <!-- Inference Time Text -->
    <TextView
        android:id="@+id/tvInferenceTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/ready"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/purple_700" />

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <!-- First Row - Super Resolution and Switch Image -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Super Resolution Button -->

            <!-- Switch Image Button -->
            <Button
                android:id="@+id/btnSwitchImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@color/teal_200"
                android:padding="10dp"
                android:text="@string/switch_image"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/btnResetImage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@android:color/holo_orange_light"
                android:padding="10dp"
                android:text="Reset"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Second Row - GPU, CPU, Reset -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- GPU Processing Button -->
            <Button
                android:id="@+id/btnGpuProcess"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                android:background="@android:color/holo_green_light"
                android:padding="10dp"
                android:text="GPU"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <!-- CPU Processing Button -->
            <Button
                android:id="@+id/btnCpuProcess"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:text="CPU"
                android:textSize="14sp"
                android:background="@android:color/holo_blue_light"
                android:textColor="@android:color/white"
                android:padding="10dp" />

            <!-- Reset Image Button -->

        </LinearLayout>

        <!-- Third Row - Tiling Option -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Tiling Checkbox -->
            <CheckBox
                android:id="@+id/cbEnableTiling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enable Tiling (for large images)"
                android:textSize="14sp"
                android:checked="true" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>